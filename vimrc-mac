"
call plug#begin('~/.vim/plugged')

Plug 'neoclide/coc.nvim', {'branch': 'release'}
Plug 'github/copilot.vim'

call plug#end()


filetype plugin indent on

syntax on
set number
set termguicolors
set background=dark
set mouse=a
set clipboard=unnamedplus
set cursorline
set wrap
set linebreak
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent

set splitbelow
set splitright

set autoread

set incsearch
set ignorecase
set smartcase
set hlsearch


set makeprg=gcc\ -Wall\ -Wextra\ -g\ %\ -o\ %<
set errorformat=%f:%l:%c:\ %m

" nnoremap <F5> :w<CR>:!gcc -Wall -Wextra -g % -o %< && ./%<<CR>
nnoremap <F6> :w<CR>:belowright split<CR>:terminal gcc -Wall -Wextra -g % -o %< && ./%<<CR>


augroup RunCode
  autocmd!
  
  " C
  autocmd FileType c nnoremap <buffer> <F5> :w<CR>:!gcc -Wall -Wextra -g % -o %< && ./%<<CR>

  " Python
  autocmd FileType python nnoremap <buffer> <F5> :w<CR>:!python3 %<CR>

  " Go
  autocmd FileType go nnoremap <buffer> <F5> :w<CR>:!go run %<CR>

  " Bash
  autocmd FileType sh nnoremap <buffer> <F5> :w<CR>:!bash %<CR>

augroup END
