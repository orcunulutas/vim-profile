set nocompatible
filetype off

"set rtp+=~/.vim/bundle/Vundle.vim
"call vundle#begin()

" Plugin 'VundleVim/Vundle.vim'   " Vundle kendi kendini yönetir
" Buraya istediğin pluginleri ekle
" Örnek:
" Plugin 'preservim/nerdtree'
" Plugin 'vim-airline/vim-airline'

"call vundle#end()
